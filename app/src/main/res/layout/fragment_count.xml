<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CountFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_app"
    tools:context=".CountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewUpper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Escolha a quantidade de caseados de acordo  com o tamanho do seu trabalho"
                android:textColor="@color/gray"
                android:textSize="28dp" />

            <LinearLayout
                android:id="@+id/layoutview_5_1_hidden"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/layoutNum"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_5_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="false"
                        android:layout_marginTop="20dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClick1"
                        android:text="teste"
                        android:textColor="@color/gray"
                        android:textSize="40dp"
                        android:visibility="visible" />
                </LinearLayout>

                <Space
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <LinearLayout
                    android:id="@+id/layoutMais"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_5_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="false"
                        android:layout_marginTop="20dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClick1"
                        android:textColor="@color/gray"
                        android:textSize="40dp"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView

                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>