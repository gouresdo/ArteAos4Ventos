<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/StartFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_app"
    tools:context=".StartFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Escolha a playlist"
                android:textColor="@color/gray"
                android:textSize="48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#D85FC8"
                android:text="Iniciante"
                android:textColor="#FFFBD5"
                android:textSize="14dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#D85FC8"
                android:text="Fácil"
                android:textColor="#FFFBD5"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#D85FC8"
                android:text="Intermediario"
                android:textColor="#FFFBD5"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#D85FC8"
                android:text="Natal"
                android:textColor="#FFFBD5"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#D85FC8"
                android:text="Fraldas"
                android:textColor="#FFFBD5"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#D85FC8"
                android:text="Sousplat"
                android:textColor="#FFFBD5"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#D85FC8"
                android:text="Toalhas de Banho"
                android:textColor="#FFFBD5"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#D85FC8"
                android:text="Zoológico da tia Graça"
                android:textColor="#FFFBD5"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#D85FC8"
                android:text="Carreira Única"
                android:textColor="#FFFBD5"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#D85FC8"
                android:text="Bicos com Duas Cores"
                android:textColor="#FFFBD5"
                android:textSize="14dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>